<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the background properties like color etc -->
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="@dimen/oustlayout_dimen30" />
            <gradient
                android:startColor="@color/common_grey"
                android:centerColor="@color/common_grey"
                android:centerY="0.5"
                android:endColor="@color/common_grey"
                android:angle="270"/>
        </shape>
    </item>

    <!-- Define the progress properties like start color, end color etc -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="@dimen/oustlayout_dimen30" />
                <gradient
                    android:startColor="@color/LiteGreen_transparent"
                    android:centerColor="@color/LiteGreen"
                    android:centerY="0.5"
                    android:endColor="@color/LiteGreen_transparent"
                    android:angle="270"/>
            </shape>
        </clip>
    </item>
</layer-list>