<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the background properties like color etc -->
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="@dimen/result_progressBar_radius" />
            <gradient
                android:startColor="@color/fulltransparent"
                android:centerColor="@color/fulltransparent"
                android:centerY="1.0"
                android:endColor="@color/fulltransparent"
                android:angle="270"/>
        </shape>
    </item>

    <!-- Define the progress properties like start color, end color etc -->
    <item android:id="@android:id/progress">
        <clip>
            <scale android:scaleWidth="100%">
                <shape>
                    <corners android:radius="@dimen/result_progressBar_radius"/>
                    <solid android:color="@color/clear_red"/>
                </shape>
            </scale>
        </clip>
    </item>
</layer-list>