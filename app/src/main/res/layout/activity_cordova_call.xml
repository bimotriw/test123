<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/exide_blue"
    tools:context=".activity.cordovacall.CordovaCallActivity">

    <TextView
        android:id="@+id/textViewPerc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/whitea"
        android:textSize="@dimen/ousttext_dimen16"
        tools:text="2%"
        />
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="@dimen/oustlayout_dimen100"
        android:layout_height="@dimen/oustlayout_dimen100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtView_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/oustlayout_dimen20"
        android:gravity="center"
        android:textColor="@color/whitea"
        android:textSize="@dimen/ousttext_dimen16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progress_bar"
        tools:text="Loading Oust.." />
</androidx.constraintlayout.widget.ConstraintLayout>