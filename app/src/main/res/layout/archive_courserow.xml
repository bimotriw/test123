<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white_pressed"
    android:paddingTop="@dimen/oustlayout_dimen3"
    android:paddingBottom="@dimen/oustlayout_dimen2"
    android:paddingLeft="@dimen/oustlayout_dimen5"
    android:paddingRight="@dimen/oustlayout_dimen5"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cource_mainrow"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="0dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/coursemain_framelayout">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/whitea"
                android:layout_gravity="center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/whitea">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/coureseimagelayout">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/oustlayout_dimen120"
                            android:id="@+id/coureseimage"
                            android:scaleType="centerCrop"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <com.oustme.oustsdk.customviews.HeavyCustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/oustlayout_dimen3"
                            android:paddingLeft="@dimen/oustlayout_dimen3"
                            android:id="@+id/coursenametext"
                            android:gravity="center_vertical"
                            android:layout_toLeftOf="@+id/archive_courseicon"
                            android:textSize="@dimen/ousttext_dimen16"
                            android:layout_marginBottom="@dimen/oustlayout_dimen4"
                            android:textColor="@color/Gray"
                            android:maxLines="2"
                            android:text="" />
                        <ImageView
                            android:layout_width="@dimen/oustlayout_dimen35"
                            android:layout_height="@dimen/oustlayout_dimen35"
                            android:layout_marginLeft="@dimen/oustlayout_dimen5"
                            android:paddingRight="@dimen/oustlayout_dimen1"
                            android:layout_marginBottom="@dimen/oustlayout_dimen1"
                            android:layout_alignParentRight="true"
                            android:id="@+id/archive_courseicon"
                            android:visibility="visible"
                            android:src="@drawable/ic_visibility_on"/>
                    </RelativeLayout>

                </LinearLayout>
            </RelativeLayout>
        </FrameLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/locklayout"
            android:visibility="gone">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/oustlayout_dimen5"
                android:src="@drawable/ic_lock_img"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>