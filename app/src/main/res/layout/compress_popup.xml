<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/imageViewClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tint="@color/common_grey"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/oustlayout_dimen8"
        android:layout_marginEnd="@dimen/oustlayout_dimen12"
        android:layout_marginRight="@dimen/oustlayout_dimen12"
        android:src="@drawable/ic_close_img"/>
    <com.oustme.oustsdk.customviews.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="@dimen/ousttext_dimen20"
        android:text="@string/upload_file"/>
    <ImageView
        android:id="@+id/imageViewUploadIcon"
        android:layout_width="@dimen/oustlayout_dimen80"
        android:layout_height="@dimen/oustlayout_dimen80"
        android:layout_marginTop="@dimen/oustlayout_dimen8"
        android:src="@drawable/ic_main_icon"/>
    <com.oustme.oustsdk.customviews.CustomTextView
        android:id="@+id/textViewSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/common_grey"
        android:textSize="@dimen/ousttext_dimen18"
        android:layout_marginTop="@dimen/oustlayout_dimen8"
        tools:text="This file is of 102MB"/>
    <com.oustme.oustsdk.customviews.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/ousttext_dimen14"
        android:layout_marginTop="@dimen/oustlayout_dimen8"
        android:layout_marginStart="@dimen/oustlayout_dimen8"
        android:layout_marginLeft="@dimen/oustlayout_dimen8"
        android:layout_marginEnd="@dimen/oustlayout_dimen8"
        android:layout_marginRight="@dimen/oustlayout_dimen8"
        android:textColor="@color/light_grey_new"
        android:text="@string/compress_recom_msg"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/oustlayout_dimen8"
        android:weightSum="2">
        <LinearLayout
            android:id="@+id/linearLayoutOriginal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="2"
            android:gravity="center"
            android:background="@color/Orange">
            <ImageView
                android:id="@+id/imageViewOriginal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="@color/whitea"
                android:layout_marginTop="@dimen/oustlayout_dimen8"
                android:layout_marginBottom="@dimen/oustlayout_dimen8"
                android:src="@drawable/ic_original"/>
            <com.oustme.oustsdk.customviews.CustomTextView
                android:id="@+id/textViewOriginal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/whitea"
                android:text="@string/original"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/oustlayout_dimen8"
                android:layout_marginStart="@dimen/oustlayout_dimen8" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearLayoutCompress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="2"
            android:gravity="center"
            android:layout_marginLeft="1dp"
            android:background="@color/lgreen"
            android:layout_marginStart="1dp"  >
        <ImageView
                android:id="@+id/imageViewCompress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="@color/whitea"
                android:src="@drawable/ic_compress_icon"
            android:layout_marginTop="@dimen/oustlayout_dimen8"
            android:layout_marginBottom="@dimen/oustlayout_dimen8"/>
            <com.oustme.oustsdk.customviews.CustomTextView
                android:id="@+id/textViewCompress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/compress"
                android:textColor="@color/whitea"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/oustlayout_dimen8"
                android:layout_marginStart="@dimen/oustlayout_dimen8"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
