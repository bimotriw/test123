<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_pressed"
    android:orientation="vertical"
    android:padding="@dimen/oustlayout_dimen15">

    <androidx.cardview.widget.CardView
        android:id="@+id/cource_mainrow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/whitelight"
        card_view:cardCornerRadius="5dp"
        card_view:cardUseCompatPadding="true">

        <FrameLayout
            android:id="@+id/coursemain_framelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/oustlayout_dimen12"
            android:paddingRight="@dimen/oustlayout_dimen12"
            android:paddingTop="@dimen/oustlayout_dimen12">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/toptitle_indicationlayout"
                android:background="@color/whitea"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/oustlayout_dimen50">
                    <RelativeLayout
                        android:id="@+id/ll_progress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:padding="@dimen/oustlayout_dimen5">

                            <TextView
                                android:id="@+id/loading_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@android:color/black" />

                            <ProgressBar
                                android:layout_width="@dimen/oustlayout_dimen20"
                                android:layout_height="@dimen/oustlayout_dimen20"
                                android:layout_marginLeft="@dimen/oustlayout_dimen5" />
                        </LinearLayout>
                    </RelativeLayout>
                    <ImageView
                        android:id="@+id/coureseimage"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/oustlayout_dimen50"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/oustlayout_dimen25"
                    android:layout_marginTop="@dimen/oustlayout_dimen2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/oustlayout_dimen20"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="8"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/totalenroll_imageview"
                                    android:layout_width="@dimen/oustlayout_dimen13"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom"
                                    android:adjustViewBounds="true" />

                                <com.oustme.oustsdk.customviews.CustomTextView
                                    android:id="@+id/totalenroll_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="@dimen/oustlayout_dimen3"
                                    android:gravity="bottom"
                                    android:singleLine="true"
                                    android:text=""
                                    android:textColor="@color/Gray"
                                    android:textSize="@dimen/ousttext_dimen10" />
                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="8"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/totaltime_imageview"
                                    android:layout_width="@dimen/oustlayout_dimen13"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom"
                                    android:adjustViewBounds="true" />

                                <com.oustme.oustsdk.customviews.CustomTextView
                                    android:id="@+id/totaltime_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginRight="@dimen/oustlayout_dimen2"
                                    android:gravity="bottom"
                                    android:singleLine="true"
                                    android:text=""
                                    android:textColor="@color/Gray"
                                    android:textSize="@dimen/ousttext_dimen9" />
                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="8"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/rowcoin_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                android:orientation="horizontal">

                                <com.oustme.oustsdk.customviews.CustomTextView
                                    android:id="@+id/totalcoin_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginRight="@dimen/oustlayout_dimen4"
                                    android:gravity="bottom"
                                    android:singleLine="true"
                                    android:text=""
                                    android:textColor="@color/Gray"
                                    android:textSize="@dimen/ousttext_dimen10" />

                                <ImageView
                                    android:id="@+id/coinicon_imageview"
                                    android:layout_width="@dimen/oustlayout_dimen14"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom"
                                    android:adjustViewBounds="true" />

                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.oustme.oustsdk.customviews.CustomTextView
                        android:id="@+id/duedate_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/oustlayout_dimen2"
                        android:text=" "
                        android:textColor="@color/Red"
                        android:textSize="@dimen/ousttext_dimen8"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>
        </FrameLayout>

        <RelativeLayout
            android:id="@+id/locklayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/oustlayout_dimen5"
                android:src="@drawable/ic_lock_img" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/coursenamelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cource_mainrow"
        android:layout_marginLeft="@dimen/oustlayout_dimen5"
        android:layout_marginRight="@dimen/oustlayout_dimen4">

        <com.oustme.oustsdk.customviews.CustomTextView
            android:id="@+id/coursenametext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="2"
            android:text=""
            android:lineSpacingExtra="@dimen/oustlayout_dimen4"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/Gray"
            android:textSize="@dimen/ousttext_dimen13"
            android:visibility="visible" />
    </RelativeLayout>


</RelativeLayout>