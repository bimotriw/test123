<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/learning_level_end_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="horizontal"
    app:cardCornerRadius="30dp"
    app:cardMaxElevation="0dp">


    <LinearLayout
        android:id="@+id/level_completed_card"
        android:layout_width="@dimen/oustlayout_dimen270"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">


            <ImageView
                android:id="@+id/course_ending_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/completed"
                tools:ignore="ContentDescription" />

        </FrameLayout>

        <TextView
            style="@style/body_2_bold"
            android:layout_width="match_parent"
            android:id="@+id/course_complete_text"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="16dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/course_completed"
            android:textColor="@color/primary_text"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.cardview.widget.CardView>