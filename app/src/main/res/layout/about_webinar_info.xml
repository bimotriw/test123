<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="@dimen/oustlayout_dimen12"
    android:layout_marginEnd="@dimen/oustlayout_dimen12"
    app:cardCornerRadius="@dimen/oustlayout_dimen14"
    app:cardElevation="0dp">

    <LinearLayout
        android:id="@+id/attendee_card_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1F222A"
        android:orientation="vertical"
        android:padding="@dimen/oustlayout_dimen10">

        <TextView
            android:id="@+id/info_meeting_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ousttext_dimen15"
            android:padding="@dimen/oustlayout_dimen10"
            android:textColor="@color/white"
            android:textSize="@dimen/font_17sp"
            android:textStyle="bold"
            tools:text="@string/pending_modules_text" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#828792" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/oustlayout_dimen10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/meeting_id"
                android:textColor="#828792"
                android:textSize="@dimen/font_14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/info_meeting_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/oustlayout_dimen5"
                android:textColor="@color/white"
                android:textSize="@dimen/font_14sp"
                android:textStyle="normal"
                tools:text="123456778876" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#828792" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/oustlayout_dimen10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/trainer"
                android:textColor="#828792"
                android:textSize="@dimen/font_14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/info_meeting_trainer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/oustlayout_dimen5"
                android:textColor="@color/white"
                android:textSize="@dimen/font_14sp"
                android:textStyle="normal"
                tools:text="Manideep A" />
        </LinearLayout>


        <FrameLayout
            android:id="@+id/info_dismiss"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/oustlayout_dimen10"
            android:layout_marginTop="@dimen/ousttext_dimen15"
            android:layout_marginEnd="@dimen/oustlayout_dimen10"
            android:layout_marginBottom="@dimen/ousttext_dimen15"
            android:background="@drawable/course_button_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="@string/dismiss"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/oustlayout_dimen14"
                android:textStyle="bold"
                tools:ignore="RtlCompat" />

        </FrameLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>