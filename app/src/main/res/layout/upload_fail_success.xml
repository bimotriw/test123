<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/rounded_whitefill">
    <ImageView
        android:id="@+id/imageViewClose"
        android:layout_width="@dimen/oustlayout_dimen30"
        android:layout_height="@dimen/oustlayout_dimen30"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/ic_close_img"
        android:tint="@color/Black"
        android:layout_gravity="end" />
    <com.oustme.oustsdk.customviews.HeavyCustomTextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:textStyle="bold"
        android:textSize="@dimen/ousttext_dimen20"
        android:layout_gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="@string/upload_complete_text" />

    <com.oustme.oustsdk.customviews.CustomTextView
        android:id="@+id/textViewMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:textSize="@dimen/ousttext_dimen16"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        tools:text="@string/media_upload_completed" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_whitefill"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginBottom="0dp"
        android:weightSum="2">

        <LinearLayout
            android:id="@+id/linearLayoutRetry"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="1px"
            android:layout_marginRight="1px"
            android:layout_weight="1"
            android:visibility="visible"
            android:background="@color/Orange"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/oustlayout_dimen8"
                android:text="@string/retry"
                android:id="@+id/retryTv"
                android:textAllCaps="true"
                android:textColor="@color/white_presseda"
                android:textSize="@dimen/ousttext_dimen16" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutOK"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_marginBottom="0dp"
            android:background="@color/lgreen"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="@dimen/oustlayout_dimen8"
                android:text="@string/ok"
                android:textAllCaps="true"
                android:textColor="@color/white_presseda"
                android:textSize="@dimen/ousttext_dimen16" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
