<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="@dimen/oustlayout_dimen5"
    android:layout_marginRight="@dimen/oustlayout_dimen5"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/oustlayout_dimen7"
        android:id="@+id/main_ll"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/oustlayout_dimen7">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/oustlayout_dimen5"
            android:orientation="horizontal"
            app:cardBackgroundColor="@android:color/white"
            card_view:cardCornerRadius="@dimen/oustlayout_dimen5">

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="@dimen/oustlayout_dimen50"
                android:layout_height="@dimen/oustlayout_dimen50"
                android:scaleType="fitXY"
                android:src="@drawable/nb_group"/>


        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/oustlayout_dimen5"
            android:layout_marginTop="@dimen/oustlayout_dimen2"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.oustme.oustsdk.customviews.CustomTextView
                    android:id="@+id/user_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    tools:text=""
                    android:textColor="@color/common_grey"
                    android:textSize="@dimen/ousttext_dimen15" />

                <com.oustme.oustsdk.customviews.CustomTextView
                    android:id="@+id/user_role"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/oustlayout_dimen5"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:singleLine="true"
                    tools:text=""
                    android:textColor="@color/dark_grey_new"
                    android:textSize="@dimen/ousttext_dimen12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/oustlayout_dimen1">

                <com.oustme.oustsdk.customviews.CustomTextView
                    android:id="@+id/department"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    tools:text=""
                    android:textColor="@color/common_grey"
                    android:textSize="@dimen/ousttext_dimen13" />

                <LinearLayout
                    android:id="@+id/email_ll"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:gravity="center_vertical"
                    android:layoutDirection="rtl">

                    <ImageView
                        android:layout_width="@dimen/oustlayout_dimen15"
                        android:layout_height="@dimen/oustlayout_dimen20"
                        android:rotation="90"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_arrow_drop_down_black_24dp"
                        android:tint="@color/lgreen" />

                    <com.oustme.oustsdk.customviews.CustomTextView
                        android:id="@+id/user_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        tools:text=""
                        android:textColor="@color/common_grey"
                        android:textSize="@dimen/ousttext_dimen12" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/oustlayout_dimen1">

                <com.oustme.oustsdk.customviews.CustomTextView
                    android:id="@+id/location"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    tools:text=""
                    android:textColor="@color/common_grey"
                    android:textSize="@dimen/ousttext_dimen13" />

                <LinearLayout
                    android:id="@+id/phone_ll"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:gravity="center_vertical"
                    android:layoutDirection="rtl">

                    <ImageView
                        android:layout_width="@dimen/oustlayout_dimen15"
                        android:layout_height="@dimen/oustlayout_dimen20"
                        android:rotation="90"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_arrow_drop_down_black_24dp"
                        android:tint="@color/lgreen" />

                    <com.oustme.oustsdk.customviews.CustomTextView
                        android:id="@+id/user_mobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        tools:text=""
                        android:textColor="@color/common_grey"
                        android:textSize="@dimen/ousttext_dimen12" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/oustlayout_dimen0.8"
        android:background="@color/LiteGray"></View>
</LinearLayout>
