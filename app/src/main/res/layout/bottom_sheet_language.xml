<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parent_wrapper"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bottom_sheet_background"
    android:orientation="vertical"
    android:weightSum="11"
    android:paddingVertical="16dp">

    <TextView
        android:id="@+id/select_lang"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/select_language"
        android:textSize="18sp"
        android:textColor="#2A1AD6"
        android:capitalize="sentences"
        android:fontFamily="@font/avenir_book"
        android:textStyle="bold"
        android:lineSpacingExtra="-1sp"
        android:gravity="center"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:elevation="5dp"
        android:background="#50cccccc"
        android:layout_marginBottom="4dp"
        app:layout_constraintTop_toBottomOf="@id/select_lang"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvLanguage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="60dp"
        app:layout_constraintBottom_toTopOf="@id/buttonWrapper"
        app:layout_constraintTop_toBottomOf="@id/divider"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/buttonWrapper"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="visible"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintBottom_toBottomOf="parent">
        <Button
            android:id="@+id/buttonSetLang"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textStyle="normal"
            android:fontFamily="@font/avenir_book"
            style="@style/AppTheme"
            app:backgroundTint="@null"
            android:background="@drawable/select_language_rounded_button"
            android:text="@string/set_language_and_continue"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>