<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottom_sheet_background"
    android:orientation="vertical"
    android:layout_weight="15"
    android:paddingVertical="16dp">

    <TextView
        android:id="@+id/select_lang"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/select_language"
        android:textSize="18sp"
        android:textColor="#2A1AD6"
        android:capitalize="sentences"
        android:fontFamily="@font/avenir_book"
        android:textStyle="bold"
        android:lineSpacingExtra="-1sp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_marginStart="16dp"
        />
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:elevation="5dp"
        android:background="#50cccccc"
        android:layout_marginBottom="4dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvLanguage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="14"
        android:layout_marginHorizontal="16dp"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/buttonWrapper"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp">
        <Button
            android:id="@+id/buttonSetLang"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textStyle="normal"
            android:fontFamily="@font/avenir_book"
            android:background="@drawable/select_language_rounded_button"
            android:text="@string/set_language_and_continue"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

</LinearLayout>