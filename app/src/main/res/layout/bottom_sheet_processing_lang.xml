<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="76dp"
    android:background="@drawable/bottom_sheet_background"
    android:paddingBottom="18dp">
    <com.oustme.oustsdk.customviews.CustomTextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_16sp"
        android:textColor="#050F24"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:fontFamily="@font/avenir_book"
        android:text="Changing Language in progress..."/>
    <com.oustme.oustsdk.customviews.CustomTextView
        android:id="@+id/subtitle"
        android:layout_width="214dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="#828792"
        android:layout_below="@id/progressBar"
        android:lineSpacingExtra="0sp"
        android:fontFamily="@font/avenir_book"
        android:gravity="center_horizontal|center_vertical"
        android:alpha="0.5"
        android:text="The application will be restarted after changes completed"
        />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="214dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="16dp"
        android:layout_marginTop="15dp"
        android:foregroundTint="#009688"
        android:indeterminate="false"
        android:indeterminateTint="#009688"
        android:max="100"
        android:progress="0"
        android:progressBackgroundTint="#009688"
        android:progressTint="#009688" />

    <com.oustme.oustsdk.customviews.CustomTextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="#1B2D93"
        android:layout_below="@id/subtitle"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/avenir_book"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center_horizontal|center_vertical"
        android:text="Relaunch application in "
        />
    <com.oustme.oustsdk.customviews.CustomTextView
        android:id="@+id/tvCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/tvTitle"
        android:textColor="#1B2D93"
        android:layout_below="@id/subtitle"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/avenir_book"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center_horizontal|center_vertical"
        android:text="5s"
        />
</RelativeLayout>