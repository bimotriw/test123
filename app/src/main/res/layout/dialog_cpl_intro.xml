<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitea"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/intro_bg_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/cpl_intro_icon"
            android:layout_width="@dimen/oustlayout_dimen150"
            android:layout_height="@dimen/oustlayout_dimen150"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/oustlayout_dimen100" />

        <LinearLayout
            android:id="@+id/main_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/oustlayout_dimen10"
            android:orientation="vertical">

            <com.oustme.oustsdk.customviews.HeavyCustomTextView
                android:id="@+id/cpl_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/oustlayout_dimen25"
                android:gravity="center"
                android:padding="@dimen/oustlayout_dimen5"
                android:text=""
                android:textColor="@color/lblack"
                android:textSize="@dimen/ousttext_dimen25" />

            <LinearLayout
                android:id="@+id/enter_button_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/oustlayout_dimen25"
                android:background="@color/ldorange"
                android:orientation="vertical">

                <com.oustme.oustsdk.customviews.HeavyCustomTextView
                    android:id="@+id/enter_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/oustlayout_dimen10"
                    android:text="@string/start"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/ousttext_dimen18" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/logoutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/oustlayout_dimen5"
            android:layout_marginTop="@dimen/oustlayout_dimen5"
            android:layout_marginEnd="@dimen/oustlayout_dimen5"
            android:layout_marginBottom="@dimen/oustlayout_dimen5"
            android:background="@color/Orange"
            android:paddingLeft="@dimen/oustlayout_dimen15"
            android:paddingRight="@dimen/oustlayout_dimen15">

            <com.oustme.oustsdk.customviews.CustomTextView
                android:id="@+id/logout_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/oustlayout_dimen10"
                android:text="@string/logout"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="@dimen/ousttext_dimen16" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/closeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/oustlayout_dimen5"
            android:background="@color/Orange"
            android:padding="@dimen/oustlayout_dimen5">

            <ImageView
                android:layout_width="@dimen/oustlayout_dimen25"
                android:layout_height="@dimen/oustlayout_dimen25"
                android:src="@drawable/ic_close_img" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
