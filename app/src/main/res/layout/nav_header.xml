<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/oustlayout_dimen230"
        android:id="@+id/contentLayout"
        android:visibility="visible"
        android:paddingBottom="@dimen/oustlayout_dimen15">
        <com.oustme.oustsdk.customviews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/oustlayout_dimen30"
            android:textSize="@dimen/ousttext_dimen12"
            android:id="@+id/appversion_text"
            android:textColor="@color/LiteGray"
            android:gravity="center"
            android:layout_marginStart="@dimen/oustlayout_dimen5"
            android:text="0.9.5"/>
        <com.oustme.oustsdk.customviews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/oustlayout_dimen30"
            android:textSize="@dimen/ousttext_dimen12"
            android:id="@+id/userId"
            android:textColor="@color/LiteGray"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/oustlayout_dimen5"
            android:gravity="center"
            android:text="test"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profile"
            android:layout_marginBottom="@dimen/oustlayout_dimen10"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/oustlayout_dimen40">
            <com.oustme.oustsdk.customviews.CircleImageView
                android:layout_width="@dimen/oustlayout_dimen120"
                android:layout_height="@dimen/oustlayout_dimen120"
                android:contentDescription="@string/app_name"
                android:visibility="visible"
                android:background="@drawable/friendprofileavatardrawable"
                android:id="@+id/avatar" />
            <com.oustme.oustsdk.customviews.HeavyCustomTextView
                android:layout_width="@dimen/oustlayout_dimen120"
                android:layout_height="@dimen/oustlayout_dimen120"
                android:textColor="@color/whitea"
                android:visibility="gone"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:maxLength="2"
                android:text=""
                android:textSize="@dimen/ousttext_dimen25"
                android:id="@+id/userprofileImageText"
                android:layout_toRightOf="@+id/avatar"
                android:contentDescription="@string/app_name" />
        </RelativeLayout>
        <ProgressBar
            android:id="@+id/profileprogress_bar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_below="@+id/profile"
            android:layout_marginLeft="@dimen/oustlayout_dimen20"
            android:layout_marginRight="@dimen/oustlayout_dimen20"
            android:layout_width="match_parent"
            android:layout_height="@dimen/oustlayout_dimen12"
            android:max="100"
            android:progressDrawable="@drawable/modulecomplete_progress" />
        <com.oustme.oustsdk.customviews.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/oustlayout_dimen11"
            android:text=""
            android:layout_below="@+id/profile"
            android:gravity="center"
            android:id="@+id/progresstext_val"
            android:textColor="@color/Black"
            android:textSize="@dimen/ousttext_dimen8"/>
        <com.oustme.oustsdk.customviews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profileprogresstext"
            android:gravity="left"
            android:layout_alignParentRight="true"
            android:paddingTop="@dimen/oustlayout_dimen3"
            android:paddingRight="@dimen/oustlayout_dimen25"
            android:text="@string/profile_completedTxt"
            android:textSize="@dimen/ousttext_dimen8"
            android:layout_above="@+id/profileprogress_bar" />
        <com.oustme.oustsdk.customviews.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/oustlayout_dimen42"
            android:textStyle="bold"
            android:textSize="@dimen/ousttext_dimen18"
            android:id="@+id/userName"
            android:layout_below="@+id/profileprogress_bar"
            android:gravity="center|center_vertical"
            android:textColor="@color/Gray"
            android:layout_marginTop="@dimen/oustlayout_dimen5" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="@color/LiteGray"
        android:layout_marginRight="@dimen/oustlayout_dimen15"
        android:layout_marginLeft="@dimen/oustlayout_dimen15"
        android:visibility="gone"></View>
</LinearLayout>
