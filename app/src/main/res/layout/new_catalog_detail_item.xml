<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="@dimen/oustlayout_dimen15">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/oustlayout_dimen12"
            android:paddingLeft="@dimen/oustlayout_dimen10">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_marginStart="@dimen/oustlayout_dimen4"
                android:layout_marginLeft="@dimen/oustlayout_dimen4"
                android:orientation="vertical">
                <com.oustme.oustsdk.customviews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/ousttext_dimen16"
                    android:id="@+id/header"
                    android:textColor="@color/s_black"
                    tools:text="Header"/>
                <com.oustme.oustsdk.customviews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="3dp"
                    android:textSize="@dimen/ousttext_dimen20"
                    android:id="@+id/dummyHeader"
                    android:background="@android:color/black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/seeall_courseslayout"
                android:gravity="end"
                android:visibility="gone"
                android:paddingRight="@dimen/oustlayout_dimen4"
                android:layout_marginTop="@dimen/oustlayout_dimen2"
                android:orientation="horizontal">
                <com.oustme.oustsdk.customviews.HeavyCustomTextView
                    android:id="@+id/seealltext"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/ousttext_dimen12"
                    tools:text="see"
                    android:layout_gravity="center"
                    android:gravity="center"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/see_all"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                </ImageView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayoutExpander"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/oustlayout_dimen3"
                android:layout_marginEnd="@dimen/oustlayout_dimen12"
                android:layout_marginRight="@dimen/oustlayout_dimen12"
                android:layout_gravity="center_vertical">
                <ImageView
                    android:id="@+id/imageViewExpand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:elevation="@dimen/oustlayout_dimen8"
                    android:foregroundGravity="center_vertical"
                    android:src="@drawable/ic_uparrow"/>
            </LinearLayout>
        </LinearLayout>
        <com.oustme.oustsdk.customviews.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/oustlayout_dimen60"
            android:id="@+id/nodata_text"
            android:visibility="gone"
            android:gravity="center"
            android:text=""/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/catalogListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/oustlayout_dimen5"
            android:layout_marginLeft="@dimen/oustlayout_dimen6"
            android:layout_marginStart="@dimen/oustlayout_dimen6"
            android:layout_marginEnd="@dimen/oustlayout_dimen14"
            android:layout_marginRight="@dimen/oustlayout_dimen14"
            android:visibility="visible"
            tools:listitem="@layout/new_catalog_item1" />
    </LinearLayout>

</LinearLayout>