<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/popupBackGround"
        android:layout_centerInParent="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/oustlayout_dimen20"
            android:layout_marginRight="@dimen/oustlayout_dimen20">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="false"
                android:layout_alignParentRight="false"
                android:layout_centerInParent="true"
                android:background="@color/White"  >
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:layout_width="@dimen/oustlayout_dimen40"
                        android:layout_height="@dimen/oustlayout_dimen40"
                        android:id="@+id/assessmentOtp_btnClose"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="right"
                        android:src="@drawable/ic_close_img"
                        android:tint="@color/Black"
                        android:background="@android:color/transparent"
                        android:layout_marginTop="@dimen/oustlayout_dimen5" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/oustlayout_dimen30"
                        android:paddingRight="@dimen/oustlayout_dimen30"
                        android:gravity="center">

                        <com.oustme.oustsdk.customviews.HeavyCustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/confirm_title"
                            android:layout_alignParentTop="true"
                            android:gravity="center"
                            android:textColor="@color/Gray"
                            android:id="@+id/confirm_titletxt"
                            android:textSize="@dimen/ousttext_dimen18"/>
                        <com.oustme.oustsdk.customviews.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/confirm_subtitletxt"
                            android:layout_below="@+id/confirm_titletxt"
                            android:text="@string/confirm_subtitle"
                            android:gravity="right"
                            android:textColor="@color/Gray"
                            android:textSize="@dimen/ousttext_dimen10"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/Layout"
                    android:layout_marginTop="@dimen/oustlayout_dimen5">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentBottom="false"
                            android:layout_alignParentTop="true">
                            <com.oustme.oustsdk.customviews.OustCustomEditText
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/oustlayout_dimen45"
                                android:background="@drawable/greyroundedcorner_graybg"
                                android:id="@+id/edittext_phoneno"
                                android:textColor="@color/Black"
                                android:gravity="left|center_vertical"
                                android:textSize="@dimen/ousttext_dimen18"
                                android:layout_alignParentLeft="true"
                                android:singleLine="true"
                                android:imeOptions="actionNext"
                                android:inputType="textNoSuggestions|number"
                                android:maxLength="20"
                                android:paddingLeft="@dimen/oustlayout_dimen10"
                                android:paddingRight="@dimen/oustlayout_dimen10"
                                android:layout_marginLeft="@dimen/oustlayout_dimen20"
                                android:layout_marginRight="@dimen/oustlayout_dimen20"
                                android:layout_marginBottom="@dimen/oustlayout_dimen5"
                                android:layout_marginTop="@dimen/oustlayout_dimen10"
                                android:linksClickable="true"
                                android:selectAllOnFocus="false" />

                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/oustlayout_dimen5">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentBottom="false"
                            android:layout_alignParentTop="true">
                            <com.oustme.oustsdk.customviews.OustCustomEditText
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/oustlayout_dimen45"
                                android:background="@drawable/greyroundedcorner_graybg"
                                android:id="@+id/edittext_mail"
                                android:textColor="@color/Black"
                                android:gravity="left|center_vertical"
                                android:textSize="@dimen/ousttext_dimen18"
                                android:layout_alignParentLeft="true"
                                android:singleLine="true"
                                android:imeOptions="actionGo"
                                android:inputType="textNoSuggestions|textEmailAddress"
                                android:paddingLeft="@dimen/oustlayout_dimen10"
                                android:paddingRight="@dimen/oustlayout_dimen10"
                                android:layout_marginLeft="@dimen/oustlayout_dimen20"
                                android:layout_marginRight="@dimen/oustlayout_dimen20"
                                android:layout_marginBottom="@dimen/oustlayout_dimen5"
                                android:layout_marginTop="@dimen/oustlayout_dimen5"
                                android:linksClickable="true"
                                android:selectAllOnFocus="false" />

                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/oustlayout_dimen20"
                    android:paddingRight="@dimen/oustlayout_dimen10"
                    android:paddingTop="@dimen/oustlayout_dimen1"
                    android:gravity="left">

                    <com.oustme.oustsdk.customviews.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:id="@+id/resentotp_txt"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:gravity="center_vertical"
                        android:textColor="@color/Gray"
                        android:textSize="@dimen/ousttext_dimen14" />
                </RelativeLayout>
                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/oustlayout_dimen40"
                    android:layout_gravity="center_horizontal|top"
                    android:id="@+id/yesOrNoLayout"
                    android:layout_marginLeft="@dimen/oustlayout_dimen20"
                    android:layout_marginRight="@dimen/oustlayout_dimen20"
                    android:layout_marginTop="@dimen/oustlayout_dimen14"
                    android:layout_marginBottom="@dimen/oustlayout_dimen15"
                    android:gravity="top">
                    <com.oustme.oustsdk.customviews.CustomOustButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/otp_okbtn"
                        android:layout_gravity="center"
                        android:gravity="center|center_vertical"
                        android:textColor="@color/White"
                        android:textSize="@dimen/ousttext_dimen14"
                        android:singleLine="true"
                        android:text="@string/confirm"
                        android:background="@color/LiteGreen"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
