<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.textfield.MaterialAutoCompleteTextView
        android:id="@+id/items_achievement_search_flat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/oustlayout_dimen30"
        android:background="@drawable/search_bar_round_gray"
        android:drawableEnd="@drawable/search_icon"
        android:drawablePadding="@dimen/oustlayout_dimen8"
        android:hint="@string/search_text"
        android:minHeight="48dp"
        android:padding="@dimen/oustlayout_dimen10"
        android:singleLine="true"
        android:textColor="@color/unselected_text"
        android:textColorHint="@color/unselected_text"
        style="@style/body_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>