<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/LiteGrayNew">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/oustlayout_dimen5"
            card_view:cardBackgroundColor="@color/whitelight"
            card_view:cardElevation="2dp"
            card_view:cardCornerRadius="2dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_marginTop="@dimen/oustlayout_dimen10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:id="@+id/seeall_layout"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <com.oustme.oustsdk.customviews.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/seeAll"
                            android:textSize="@dimen/oustlayout_dimen10"
                            android:textColor="@color/DarkGray"
                            android:layout_toLeftOf="@+id/seeall_forwardimage"
                            android:text=""
                            android:layout_centerVertical="true"/>
                        <ImageView
                            android:id="@+id/seeall_forwardimage"
                            android:layout_width="@dimen/oustlayout_dimen16"
                            android:layout_height="@dimen/oustlayout_dimen16"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/ic_arrowforward"
                            android:layout_centerVertical="true"
                            android:paddingRight="@dimen/oustlayout_dimen2"
                            android:paddingBottom="@dimen/oustlayout_dimen1"/>
                    </RelativeLayout>
                    <com.oustme.oustsdk.customviews.HeavyCustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/oustlayout_dimen70"
                        android:id="@+id/favouritecard_coursename"
                        android:textSize="@dimen/oustlayout_dimen14"
                        android:singleLine="true"
                        android:paddingLeft="@dimen/oustlayout_dimen10"
                        android:layout_alignParentLeft="true"
                        android:text=""/>
                </RelativeLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/favcard_ofcourse"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/oustlayout_dimen150"
                    android:visibility="visible"
                    android:layout_marginTop="@dimen/oustlayout_dimen5">
                </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</RelativeLayout>