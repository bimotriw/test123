<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/certificate_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/oustlayout_dimen12"
    app:cardCornerRadius="@dimen/oustlayout_dimen20"
    app:cardElevation="@dimen/oustlayout_dimen4"
    app:cardMaxElevation="@dimen/oustlayout_dimen4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/certificate_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/oustlayout_dimen150"
            android:contentDescription="@string/inspect"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/content_name_certificate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:maxLines="2"
            android:minLines="2"
            android:padding="@dimen/oustlayout_dimen3"
            android:singleLine="false"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/font_14sp"
            android:textStyle="normal" />

        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/oustlayout_dimen1"
            android:layout_marginStart="@dimen/oustlayout_dimen5"
            android:layout_marginEnd="@dimen/oustlayout_dimen5"
            android:alpha="0.7"
            android:background="@color/light_grey_new" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/oustlayout_dimen7"
            android:weightSum="1.5">

            <TextView
                android:id="@+id/certificate_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/oustlayout_dimen5"
                android:layout_weight="1.2"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/font_14sp"
                android:textStyle="normal" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/oustlayout_dimen5"
                android:alpha="0.8"
                android:background="@color/light_grey_new" />

            <ImageView
                android:id="@+id/certificate_download"
                android:layout_width="@dimen/oustlayout_dimen20"
                android:layout_height="@dimen/oustlayout_dimen20"
                android:background="@drawable/download_icon"
                android:contentDescription="@string/inspect"
                android:scaleType="fitCenter" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>