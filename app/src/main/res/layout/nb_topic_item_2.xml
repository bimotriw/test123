<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/oustlayout_dimen155"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="@dimen/oustlayout_dimen140"
            android:layout_height="@dimen/oustlayout_dimen140"
            android:layout_marginLeft="@dimen/oustlayout_dimen8"
            android:layout_marginTop="@dimen/oustlayout_dimen5"
            android:layout_marginRight="@dimen/oustlayout_dimen8">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="8dp">

                <ImageView
                    android:id="@+id/nb_topic_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/c" />

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <TextView
            android:id="@+id/new_post_count"
            android:layout_width="@dimen/oustlayout_dimen25"
            android:layout_height="@dimen/oustlayout_dimen25"
            android:layout_alignParentRight="true"
            android:background="@drawable/greenlite_round_textview"
            android:gravity="center"
            android:padding="@dimen/oustlayout_dimen3"
            android:textColor="@color/whitea"
            android:textSize="@dimen/ousttext_dimen9"
            android:visibility="gone"
            tools:text="@string/zero_text" />

        <TextView
            android:id="@+id/topic_title"
            android:layout_width="@dimen/oustlayout_dimen135"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relative"
            android:layout_marginLeft="@dimen/oustlayout_dimen12"
            android:layout_marginTop="5dp"
            android:layout_marginRight="@dimen/oustlayout_dimen8"
            android:ellipsize="marquee"
            android:gravity="center|left"
            android:maxLines="2"
            android:text=""
            android:textColor="@color/gray_sub_heading"
            android:textSize="13sp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/nb_topic_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="@dimen/oustlayout_dimen120"
            android:layout_height="@dimen/oustlayout_dimen95"
            android:layout_marginLeft="@dimen/oustlayout_dimen12"
            android:layout_marginRight="@dimen/oustlayout_dimen8"
            android:orientation="vertical">


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/oustlayout_dimen7"
                android:layout_weight="2"
                android:orientation="vertical"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/ll1"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:id="@+id/no_post_ll"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/oustlayout_dimen5"
                        android:layout_marginTop="@dimen/oustlayout_dimen7">

                        <TextView
                            android:id="@+id/new_post_count1"
                            android:layout_width="@dimen/oustlayout_dimen20"
                            android:layout_height="@dimen/oustlayout_dimen20"
                            android:background="@drawable/greenlite_round_textview"
                            android:gravity="center"
                            android:padding="@dimen/oustlayout_dimen3"
                            android:textColor="@color/whitea"
                            android:textSize="@dimen/ousttext_dimen9"
                            tools:text="@string/zero_text" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/oustlayout_dimen10">

                    <TextView
                        android:id="@+id/nbUpdateText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:textColor="@color/dark_grey_new"
                        android:textSize="@dimen/ousttext_dimen10"
                        tools:text="" />

                    <LinearLayout
                        android:id="@+id/members_ll"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="@dimen/oustlayout_dimen15"
                            android:layout_height="@dimen/oustlayout_dimen12"
                            android:layout_gravity="center_vertical"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_play_white" />

                        <TextView
                            android:id="@+id/nbTotalMembers"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:textColor="@color/Black"
                            android:textSize="@dimen/ousttext_dimen10"
                            tools:text="" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/oustlayout_dimen1"
        android:layout_alignParentBottom="true"
        android:background="@color/LiteGray"
        android:visibility="gone" />

</LinearLayout>
