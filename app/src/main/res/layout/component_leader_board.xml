<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/data_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/overall_data_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="187dp"
                    android:layout_gravity="center"
                    android:background="@color/black"
                    android:baselineAligned="false">


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/golden_spring"
                        tools:ignore="ContentDescription" />


                    <RelativeLayout
                        android:id="@+id/rank_2_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="115dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="15dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/rank_2"
                            android:layout_width="102dp"
                            android:layout_height="102dp"
                            android:background="@drawable/leaderboard_rank_2"
                            android:scaleType="centerCrop"
                            app:civ_border_width="0dp" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/rank_2_user"
                            android:layout_width="99dp"
                            android:layout_height="99dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="1dp"
                            android:background="@drawable/leaderboard_rank_2"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_user_avatar"
                            app:civ_border_color="@color/LiteGreen"
                            app:civ_border_width="0dp" />

                        <TextView
                            android:id="@+id/rank_2_text"
                            style="@style/caption_1"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/leaderboard_rank_2"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            tools:targetApi="lollipop" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rank_1_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="137dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="15dp"
                            android:gravity="center"
                            tools:ignore="UselessParent">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/rank_1"
                                android:layout_width="122dp"
                                android:layout_height="122dp"
                                android:background="@drawable/leaderboard_user_bg"
                                android:scaleType="centerCrop"
                                app:civ_border_width="0dp" />

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/rank_1_user"
                                android:layout_width="119dp"
                                android:layout_height="119dp"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="1dp"
                                android:background="@drawable/leaderboard_user_bg"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_user_avatar"
                                app:civ_border_width="0dp" />

                            <TextView
                                android:id="@+id/rank_1_text"
                                style="@style/caption_1"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/leaderboard_user_bg"
                                android:gravity="center"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                tools:targetApi="lollipop" />

                        </RelativeLayout>


                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/rank_3_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="115dp"
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="15dp"
                        android:gravity="end">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/rank_3"
                            android:layout_width="102dp"
                            android:layout_height="102dp"
                            android:background="@drawable/leaderboard_rank_3"
                            android:scaleType="centerCrop"
                            app:civ_border_width="0dp" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/rank_3_user"
                            android:layout_width="99dp"
                            android:layout_height="99dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="1dp"
                            android:background="@drawable/leaderboard_rank_3"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_user_avatar"
                            app:civ_border_width="0dp" />

                        <TextView
                            android:id="@+id/rank_3_text"
                            style="@style/caption_1"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/leaderboard_rank_3"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            tools:targetApi="lollipop" />


                    </RelativeLayout>


                </FrameLayout>

                <TextView
                    android:id="@+id/leader_board_for_tv"
                    style="@style/subtitle_2"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/primary_text"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/user_data_lay"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/oustlayout_dimen70"
                    android:layout_gravity="center"
                    android:background="@color/self_rank_bg"
                    android:gravity="center"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp">

                    <TextView
                        android:id="@+id/self_user_rank"
                        style="@style/body_1_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="8dp"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        tools:targetApi="lollipop" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/self_user"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="16dp"
                        android:background="@drawable/leaderboard_user_bg"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_user_avatar"
                        app:civ_border_color="@color/LiteGreen"
                        app:civ_border_width="2dp" />

                    <TextView
                        android:id="@+id/self_user_name"
                        style="@style/body_1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="start|center_vertical"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textColor="@color/white"
                        tools:targetApi="lollipop" />

                    <TextView
                        android:id="@+id/self_user_score"
                        style="@style/body_1_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="start|center_vertical"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="16dp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        tools:targetApi="lollipop" />


                </LinearLayout>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/leader_board_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        </LinearLayout>

        <include
            android:id="@+id/no_data_layout"
            layout="@layout/common_no_data_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:fillViewport="true"
            android:fitsSystemWindows="true"
            android:visibility="gone" />

        <include
            android:id="@+id/branding_main_layout"
            layout="@layout/branding_loader"
            android:visibility="visible" />
    </FrameLayout>


</androidx.core.widget.NestedScrollView>