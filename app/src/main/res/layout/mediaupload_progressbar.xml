<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/mediaupload_progressbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_transparent_dark"
        android:elevation="@dimen/oustlayout_dimen9"
        android:visibility="visible">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/oustlayout_dimen140"
            android:layout_centerInParent="true"
            android:id="@+id/uploadprogressLayout"
            android:layout_marginLeft="@dimen/oustlayout_dimen5"
            android:layout_marginRight="@dimen/oustlayout_dimen5">
            <com.oustme.oustsdk.customviews.CustomTextView
                android:id="@+id/mediaUploadMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/whitea"
                android:layout_centerHorizontal="true"
                android:text="@string/preparing_media"/>
            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:indeterminate="@bool/default_underline_indicator_fades"
                android:indeterminateDuration="1000"
                android:indeterminateBehavior="repeat"
                android:interpolator="@android:anim/linear_interpolator"
                android:layout_width="match_parent"
                android:background="@android:color/transparent"
                android:layout_centerInParent="true"
                android:layout_height="@dimen/oustlayout_dimen15"
                android:indeterminateDrawable="@drawable/flatprogressbarback"
                android:layout_margin="@dimen/oustlayout_dimen5"
                android:visibility="visible"/>
            <ProgressBar
                android:id="@+id/uploadprogress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_centerInParent="true"
                android:layout_height="@dimen/oustlayout_dimen15"
                android:progress="0"
                android:progressDrawable="@drawable/download_progressbar"
                android:layout_margin="@dimen/oustlayout_dimen5"
                android:visibility="visible"/>
            <com.oustme.oustsdk.customviews.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/uploadprogresstext"
                android:layout_centerInParent="true"
                android:textSize="@dimen/ousttext_dimen12"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/Gray"
                android:text="0%"/>
        </RelativeLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
