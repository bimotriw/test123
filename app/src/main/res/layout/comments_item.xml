<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:id="@+id/baseLayout">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/commentrow_background"
        android:layout_marginTop="@dimen/oustlayout_dimen5">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:id="@+id/commentdisplay_layout"
            android:background="@android:color/transparent">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/avatarLayout"
                android:gravity="center"
                android:weightSum="1"
                android:layout_margin="@dimen/oustlayout_dimen10">

                <com.oustme.oustsdk.customviews.CircleImageView
                    android:layout_width="@dimen/oustlayout_dimen55"
                    android:layout_height="@dimen/oustlayout_dimen55"
                    android:background="@drawable/roundedcornergreenbackground"
                    android:id="@+id/commenterAvatarImg"
                    android:gravity="center|center_vertical" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dataLayout"
                android:layout_toRightOf="@+id/avatarLayout"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/oustlayout_dimen12"
                android:layout_marginRight="@dimen/oustlayout_dimen5"
                android:layout_marginBottom="@dimen/oustlayout_dimen10">

                <com.oustme.oustsdk.customviews.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/commenter_name"
                    android:textSize="@dimen/ousttext_dimen16"
                    android:gravity="top|center_vertical"
                    android:textColor="@color/White"
                    android:layout_marginBottom="@dimen/oustlayout_dimen2" />
                <com.oustme.oustsdk.customviews.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/ousttext_dimen12"
                    android:text=""
                    android:id="@+id/commentdate"
                    android:textColor="@color/LiteGreen"
                    android:layout_marginBottom="@dimen/oustlayout_dimen3" />

                <com.oustme.oustsdk.customviews.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/comment"
                    android:lineSpacingExtra="@dimen/oustlayout_dimen3"
                    android:textSize="@dimen/ousttext_dimen14"
                    android:textColor="@color/white_pressed" />

            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>