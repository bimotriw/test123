<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:layout_margin="@dimen/oustlayout_dimen30">
        
        <com.oustme.oustsdk.customviews.HeavyCustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rate the Pdp hiring process"
            android:gravity="center"
            android:id="@+id/cpl_rate_header"
            android:textAllCaps="true"
            android:layout_marginRight="@dimen/oustlayout_dimen5"
            android:layout_marginLeft="@dimen/oustlayout_dimen5"
            android:textSize="@dimen/ousttext_dimen20"
            android:padding="@dimen/oustlayout_dimen15"
            android:textColor="@color/orange"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/oustlayout_dimen10"
            android:paddingRight="@dimen/oustlayout_dimen10"
            android:paddingBottom="@dimen/oustlayout_dimen10"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/oustlayout_dimen50"
                android:background="@drawable/cpl_rating_star_bg"
                android:gravity="center"
                android:layout_marginLeft="@dimen/oustlayout_dimen25"
                android:layout_marginTop="@dimen/oustlayout_dimen9"
                android:orientation="horizontal"
                android:paddingRight="@dimen/oustlayout_dimen25"
                android:paddingLeft="@dimen/oustlayout_dimen40">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/cpl_rate_img1"
                    android:layout_height="@dimen/oustlayout_dimen25"
                    android:src="@drawable/star_filla"
                    android:padding="@dimen/oustlayout_dimen2"
                    android:tint="@color/light_orange"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="@dimen/oustlayout_dimen2"
                    android:layout_height="@dimen/oustlayout_dimen25"
                    android:src="@drawable/star_filla"
                    android:id="@+id/cpl_rate_img2"
                    android:tint="@color/light_orange"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="@dimen/oustlayout_dimen2"
                    android:id="@+id/cpl_rate_img3"
                    android:layout_height="@dimen/oustlayout_dimen25"
                    android:src="@drawable/star_filla"
                    android:tint="@color/light_orange"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="@dimen/oustlayout_dimen2"
                    android:id="@+id/cpl_rate_img4"
                    android:layout_height="@dimen/oustlayout_dimen25"
                    android:src="@drawable/star_filla"
                    android:tint="@color/light_orange"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="@dimen/oustlayout_dimen2"
                    android:id="@+id/cpl_rate_img5"
                    android:layout_height="@dimen/oustlayout_dimen25"
                    android:src="@drawable/star_filla"
                    android:tint="@color/light_orange"/>
            </LinearLayout>
            <com.oustme.oustsdk.customviews.HeavyCustomTextView
                android:layout_width="@dimen/oustlayout_dimen70"
                android:layout_height="@dimen/oustlayout_dimen65"
                android:text="5.0"
                android:padding="@dimen/oustlayout_dimen5"
                android:gravity="center"
                android:id="@+id/cpl_rating_txt"
                android:textColor="@color/Black"
                android:textSize="@dimen/ousttext_dimen20"
                android:background="@drawable/cpl_rating_bg"/>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/oustlayout_dimen10"
            android:background="@drawable/orange_rectangular_corner_border"
            android:padding="@dimen/oustlayout_dimen5">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text=""
                android:id="@+id/cpl_rate_feedback_et"
                android:padding="@dimen/oustlayout_dimen5"
                android:textColorHint="@color/circle_gray"
                android:hint="@string/rate_feedback_str"
                android:minHeight="@dimen/oustlayout_dimen40"
                android:maxHeight="@dimen/oustlayout_dimen100"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/oustlayout_dimen10"
            android:gravity="center"
            android:id="@+id/cpl_rate_submit_ll"
            android:background="@color/light_orange">
            <com.oustme.oustsdk.customviews.HeavyCustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/submit"
                android:padding="@dimen/oustlayout_dimen5"
                android:textColor="@android:color/white"
                android:textSize="@dimen/ousttext_dimen20"/>
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>