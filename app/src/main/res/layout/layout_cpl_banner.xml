<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/oustlayout_dimen100"
        android:layout_marginStart="@dimen/oustlayout_dimen8"
        android:layout_marginLeft="@dimen/oustlayout_dimen8"
        android:layout_marginEnd="@dimen/oustlayout_dimen8"
        android:layout_marginRight="@dimen/oustlayout_dimen8"
        android:background="@drawable/cpl_banner_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#000000"
            android:alpha="0.6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/textViewCplTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/oustlayout_dimen16"
            android:layout_marginLeft="@dimen/oustlayout_dimen16"
            android:layout_marginTop="@dimen/oustlayout_dimen12"
            android:layout_marginEnd="@dimen/oustlayout_dimen8"
            android:layout_marginRight="@dimen/oustlayout_dimen8"
            android:textColor="@android:color/white"
            android:textSize="@dimen/ousttext_dimen14"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Title" />

        <TextView
            android:id="@+id/textViewCplDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/oustlayout_dimen16"
            android:layout_marginLeft="@dimen/oustlayout_dimen16"
            android:layout_marginTop="@dimen/oustlayout_dimen4"
            android:layout_marginEnd="@dimen/oustlayout_dimen16"
            android:layout_marginRight="@dimen/oustlayout_dimen16"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewCplTitle"
            tools:text="Descdsvbasdk;vbk;cbvk;ba;kvb;bv;bs;bv;kabc;k b;c ;kbxc;kb ;k;k c;kc bxck xc " />

        <Button
            android:id="@+id/buttonContinue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/oustlayout_dimen8"
            android:layout_marginBottom="@dimen/oustlayout_dimen8"
            android:background="@drawable/rounded_blackcorner"
            android:minHeight="@dimen/oustlayout_dimen20"
            android:text="continue"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewCplDescription" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/oustlayout_dimen8"
        android:layout_marginBottom="@dimen/oustlayout_dimen8"
        android:layout_marginEnd="@dimen/oustlayout_dimen8"
        android:layout_marginRight="@dimen/oustlayout_dimen8"
        android:layout_marginStart="@dimen/oustlayout_dimen8"
        android:layout_marginLeft="@dimen/oustlayout_dimen8"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl_banner">

        <ImageView
            android:layout_width="@dimen/oustlayout_dimen15"
            android:layout_height="@dimen/oustlayout_dimen15"
            android:layout_marginStart="@dimen/oustlayout_dimen4"
            android:layout_marginLeft="@dimen/oustlayout_dimen4"
            android:layout_gravity="center"
            android:src="@drawable/ic_enrolled_user" />

        <TextView
            android:id="@+id/textViewEnrollCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/oustlayout_dimen8"
            android:layout_marginStart="@dimen/oustlayout_dimen8"
            tools:text="837" />

        <ImageView
            android:id="@+id/coins_icon"
            android:layout_width="@dimen/oustlayout_dimen15"
            android:layout_height="@dimen/oustlayout_dimen15"
            android:layout_marginLeft="@dimen/oustlayout_dimen8"
            android:layout_marginStart="@dimen/oustlayout_dimen8"
            android:layout_gravity="center"
            android:src="@drawable/coins_icon" />

        <TextView
            android:id="@+id/textViewOustCoinCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/oustlayout_dimen8"
            android:layout_marginStart="@dimen/oustlayout_dimen8"
            tools:text="837" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>