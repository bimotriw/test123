<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/whitelight"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true"
            android:padding="@dimen/oustlayout_dimen10"
            android:layout_marginRight="@dimen/oustlayout_dimen10"
            android:layout_marginLeft="@dimen/oustlayout_dimen10"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/oustlayout_dimen8"
                android:layout_height="@dimen/oustlayout_dimen100"
                android:visibility="gone"
                android:id="@+id/cameraLayout">
                <ImageView
                    android:id="@+id/camera_image_view"
                    android:layout_width="@dimen/oustlayout_dimen100"
                    android:layout_height="@dimen/oustlayout_dimen100"
                    android:background="@drawable/square_gray_corners"
                    android:layout_weight="1" />
                <ImageView
                    android:id="@+id/camera_icon"
                    android:layout_width="@dimen/oustlayout_dimen50"
                    android:layout_height="@dimen/oustlayout_dimen50"
                    android:paddingLeft="@dimen/oustlayout_dimen8"
                    android:paddingTop="@dimen/oustlayout_dimen8"
                    android:paddingRight="@dimen/oustlayout_dimen8"
                    android:background="@color/fulltransparent"
                    android:layout_toRightOf="@+id/camera_image_view"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/ic_camera"/>

            </RelativeLayout>
            <com.oustme.oustsdk.customviews.CustomTextView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/ousttext_dimen13"
                android:textColor="@color/DimGreen"
                android:text=""
                android:id="@+id/formrow_title"/>
            <com.oustme.oustsdk.customviews.CustomTextView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/Gray"
                android:layout_marginTop="@dimen/oustlayout_dimen4"
                android:textSize="@dimen/ousttext_dimen18"
                android:layout_marginBottom="@dimen/oustlayout_dimen8"
                android:text=""
                android:id="@+id/formrow_textView"/>
            <com.oustme.oustsdk.customviews.OustCustomEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/Gray"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:text=""
                android:hint=""
                android:layout_marginTop="@dimen/oustlayout_dimen2"
                android:textSize="@dimen/ousttext_dimen16"
                android:layout_marginBottom="@dimen/oustlayout_dimen8"
                android:id="@+id/formrow_edittext"
                android:visibility="gone"
                android:textCursorDrawable="@null"/>
            <com.oustme.oustsdk.customviews.OustCustomEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/Gray"
                android:imeOptions="actionDone"
                android:layout_marginTop="@dimen/oustlayout_dimen2"
                android:singleLine="true"
                android:textSize="@dimen/ousttext_dimen16"
                android:hint=""
                android:textColorHint="@color/DarkGray_a"
                android:id="@+id/formrow_dateedittext"
                android:layout_marginBottom="@dimen/oustlayout_dimen8"
                android:inputType="date"
                android:visibility="gone"
                android:textCursorDrawable="@null"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/oustlayout_dimen5"
                android:layout_marginBottom="@dimen/oustlayout_dimen8"
                android:id="@+id/formrow_radiobtn_layout"
                android:visibility="gone"
                android:orientation="vertical">
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:buttonTint="@color/LiteGreen"
                    android:id="@+id/formrow_togglebtn"
                    android:visibility="visible">
                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/form_radiobtna"
                        android:checked="true"
                        android:theme="@style/MyRadioButton"
                        android:textColor="@color/Black"
                        android:textSize="@dimen/ousttext_dimen14"
                        android:layout_weight="0.5"
                        android:paddingTop="@dimen/oustlayout_dimen2"
                        android:visibility="visible"/>
                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/form_radiobtnb"
                        android:textColor="@color/Black"
                        android:theme="@style/MyRadioButton"
                        android:textSize="@dimen/ousttext_dimen14"
                        android:layout_weight="0.5"
                        android:paddingTop="@dimen/oustlayout_dimen2"
                        android:visibility="visible"/>
                </RadioGroup>
            </LinearLayout>
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="@dimen/oustlayout_dimen45"
                android:layout_marginTop="@dimen/oustlayout_dimen8"
                android:background="@drawable/square_grey_corners"
                android:id="@+id/formrow_spinner"
                android:gravity="center|center_vertical"
                android:layout_marginBottom="@dimen/oustlayout_dimen8"
                android:spinnerMode="dropdown"
                android:dropDownSelector="@drawable/ic_arrow_drop_down_black_24dp"
                android:visibility="gone"/>
            <com.oustme.oustsdk.customviews.OustCustomEditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/oustlayout_dimen80"
                android:padding="@dimen/oustlayout_dimen10"
                android:textColor="@color/Gray"
                android:imeOptions="actionNext"
                android:layout_marginTop="@dimen/oustlayout_dimen2"
                android:textSize="@dimen/ousttext_dimen16"
                android:id="@+id/formrow_commentedittext"
                android:layout_marginBottom="@dimen/oustlayout_dimen8"
                android:background="@drawable/square_gray_corners"
                android:text=""
                android:maxLength="500"
                android:gravity="top"
                android:visibility="gone"
                android:textCursorDrawable="@null"/>
            <com.oustme.oustsdk.customviews.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/comment_char_info"
                android:visibility="gone"/>
            <com.oustme.oustsdk.customviews.TryRippleView
                android:id="@+id/formrow_submit_ripple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:rv_rippleDuration="180"
                app:rv_color="#fff"
                android:layout_marginTop="@dimen/oustlayout_dimen5">
                <com.oustme.oustsdk.customviews.CustomOustButton
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/oustlayout_dimen45"
                    android:text=""
                    android:id="@+id/formrow_submit_btn"
                    android:visibility="visible"
                    android:gravity="center"
                    android:textColor="@color/whitea"
                    android:textSize="@dimen/ousttext_dimen18"
                    android:background="@color/LiteGreen"/>
            </com.oustme.oustsdk.customviews.TryRippleView>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:visibility="gone"
            android:background="@color/white_pressed"></RelativeLayout>
    </LinearLayout>

</RelativeLayout>