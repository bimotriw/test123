<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/popupBackGround"
    android:padding="@dimen/oustlayout_dimen25">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:background="@drawable/bulletin_comment_background">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/oustlayout_dimen40"
            android:background="@drawable/roundedcorner_green_appbar"
            android:paddingLeft="@dimen/oustlayout_dimen6"
            android:paddingRight="@dimen/oustlayout_dimen6">
            <com.oustme.oustsdk.customviews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white_pressed"
                android:layout_centerVertical="true"
                android:textSize="@dimen/ousttext_dimen16"
                android:gravity="center_vertical"
                android:id="@+id/title"
                android:text="" />
            <LinearLayout
                android:id="@+id/close_popup"
                android:layout_width="@dimen/oustlayout_dimen30"
                android:layout_height="@dimen/oustlayout_dimen30"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center">
                <ImageView
                    android:layout_width="@dimen/oustlayout_dimen20"
                    android:layout_height="@dimen/oustlayout_dimen20"
                    android:src="@drawable/ic_close_img"
                    android:tint="@color/white_pressed"/>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/oustlayout_dimen15"
            android:paddingLeft="@dimen/oustlayout_dimen15"
            android:paddingRight="@dimen/oustlayout_dimen15"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.oustme.oustsdk.customviews.CustomTextView
                    android:id="@+id/heading1_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/common_grey"
                    android:textSize="@dimen/ousttext_dimen18"
                    android:gravity="center_vertical"
                    android:text=""/>
                <com.oustme.oustsdk.customviews.HeavyCustomTextView
                    android:id="@+id/text2_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textBlack"
                    android:textSize="@dimen/ousttext_dimen18"
                    android:gravity="center_vertical"
                    android:text=""/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/oustlayout_dimen5">
                <com.oustme.oustsdk.customviews.CustomTextView
                    android:id="@+id/heading2_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/common_grey"
                    android:textSize="@dimen/ousttext_dimen18"
                    android:gravity="center_vertical"
                    android:text=""/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/oustlayout_dimen35"
            android:layout_marginBottom="@dimen/oustlayout_dimen15"
            android:layout_marginLeft="@dimen/oustlayout_dimen15"
            android:layout_marginRight="@dimen/oustlayout_dimen15"
            android:layout_marginTop="@dimen/oustlayout_dimen15"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/cancel_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/oustlayout_dimen8">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="@dimen/oustlayout_dimen5"
                    android:background="@color/Orange"
                    android:backgroundTint="@color/Orange">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">
                        <com.oustme.oustsdk.customviews.CustomTextView
                            android:id="@+id/cancel_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/ousttext_dimen14"
                            android:textColor="@color/white_pressed"
                            android:textAllCaps="true"
                            android:text=""/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/ok_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/oustlayout_dimen8">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="@dimen/oustlayout_dimen5"
                    android:background="@color/LiteGreen"
                    android:backgroundTint="@color/LiteGreen">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">
                        <com.oustme.oustsdk.customviews.CustomTextView
                            android:id="@+id/ok_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/ousttext_dimen14"
                            android:textColor="@color/white_pressed"
                            android:textAllCaps="true"
                            android:text=""/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>