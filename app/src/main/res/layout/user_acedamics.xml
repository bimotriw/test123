<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/academicsmain_layoyt">
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/mainavatar_layout"
                android:layout_marginTop="@dimen/oustlayout_dimen50">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/oustlayout_dimen5"
                    android:layout_height="@dimen/oustlayout_dimen150">
                    <com.oustme.oustsdk.customviews.CircleImageView
                        android:layout_width="@dimen/oustlayout_dimen150"
                        android:layout_height="@dimen/oustlayout_dimen150"
                        android:id="@+id/imgAvatarButton"
                        android:layout_gravity="center"
                        android:background="@drawable/friendprofileavatardrawable"
                        android:contentDescription="@string/app_name" />

                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/oustlayout_dimen50">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/oustlayout_dimen5"
                        android:orientation="vertical">
                        <com.oustme.oustsdk.customviews.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/username_Txt"
                            android:gravity="top|center_horizontal"
                            android:textColor="@color/Black"
                            android:textSize="@dimen/ousttext_dimen20"
                            android:text=""
                            android:paddingBottom="@dimen/oustlayout_dimen4"
                            android:paddingTop="@dimen/oustlayout_dimen4" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_below="@+id/mainavatar_layout"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/oustlayout_dimen50"
                    android:background="@color/LiteGray"
                    android:id="@+id/headingLayout">
                    <com.oustme.oustsdk.customviews.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/txtTitle"
                        android:gravity="center_vertical"
                        android:textColor="@color/Black"
                        android:layout_marginLeft="@dimen/oustlayout_dimen20"
                        android:textSize="@dimen/ousttext_dimen15" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true">
                        <ProgressBar
                            android:id="@+id/academicSetting_progressbar"
                            android:indeterminate="@bool/default_underline_indicator_fades"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:indeterminateDuration="1000"
                            android:indeterminateBehavior="repeat"
                            android:interpolator="@android:anim/linear_interpolator"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/oustlayout_dimen3"
                            android:indeterminateDrawable="@drawable/custom_progressbar"
                            android:visibility="gone"/>
                    </RelativeLayout>
                </RelativeLayout>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none"
                    android:layout_marginBottom="@dimen/oustlayout_dimen20"
                    android:layout_marginLeft="@dimen/oustlayout_dimen20"
                    android:layout_marginTop="@dimen/oustlayout_dimen5"
                    android:layout_marginRight="@dimen/oustlayout_dimen20">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/oustlayout_dimen5"
                            android:paddingBottom="@dimen/oustlayout_dimen5"
                            android:orientation="vertical">
                            <com.oustme.oustsdk.customviews.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/DarkGray"
                                android:textSize="@dimen/ousttext_dimen14"
                                android:paddingTop="@dimen/oustlayout_dimen5"
                                android:paddingLeft="@dimen/oustlayout_dimen3"
                                android:id="@+id/userschool_Label" />
                            <com.oustme.oustsdk.customviews.OustCustomEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="text"
                                android:textColor="@color/whitea"
                                android:textSize="@dimen/ousttext_dimen14"
                                android:id="@+id/acdstng_userSchoolCollege" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/oustlayout_dimen5"
                            android:paddingBottom="@dimen/oustlayout_dimen5"
                            android:orientation="vertical">
                            <com.oustme.oustsdk.customviews.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/DarkGray"
                                android:textSize="@dimen/ousttext_dimen14"
                                android:paddingTop="@dimen/oustlayout_dimen5"
                                android:paddingLeft="@dimen/oustlayout_dimen3"
                                android:id="@+id/usergrade_Label" />
                            <AutoCompleteTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="text"
                                android:textColor="@color/Black"
                                android:textSize="@dimen/ousttext_dimen14"
                                android:id="@+id/acdstng_userGrade" />
                        </LinearLayout>
                        <!--<LinearLayout-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:paddingTop="@dimen/oustlayout_dimen5"-->
                        <!--android:paddingBottom="@dimen/oustlayout_dimen15"-->
                        <!--android:orientation="vertical">-->
                        <!--<com.oustme.oustapp.library.tools.CustomTextView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:textColor="@color/DarkGray"-->
                        <!--android:textSize="@dimen/ousttext_dimen14"-->
                        <!--android:paddingLeft="@dimen/oustlayout_dimen3"-->
                        <!--android:id="@+id/goallabel" />-->
                        <!--<Spinner-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="@dimen/oustlayout_dimen40"-->
                        <!--android:layout_marginTop="@dimen/oustlayout_dimen5"-->
                        <!--android:background="@drawable/square_grey_corners"-->
                        <!--android:id="@+id/goalspinner"-->
                        <!--android:gravity="center|center_vertical"-->
                        <!--android:spinnerMode="dropdown"-->
                        <!--android:dropDownSelector="@drawable/spinnerarrow" />-->
                        <!--</LinearLayout>-->
                        <com.oustme.oustsdk.customviews.CustomOustButton
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/oustlayout_dimen40"
                            android:background="@color/LiteGreen"
                            android:id="@+id/saveBtn"
                            android:textColor="@color/whitea"
                            android:textSize="@dimen/ousttext_dimen14" />
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|top"
        android:baselineAligned="false">
        <LinearLayout
            android:layout_width="@dimen/oustlayout_dimen70"
            android:layout_height="wrap_content"
            android:id="@+id/backArrow_back">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/oustlayout_dimen10"
                android:layout_marginLeft="@dimen/oustlayout_dimen10"
                android:layout_marginBottom="@dimen/oustlayout_dimen20"
                android:id="@+id/backArrowImgBtn"
                android:src="@drawable/ic_arrow_back_green"
                android:background="@android:color/transparent"
                android:tint="@color/DarkGray"
                android:contentDescription="@string/app_name" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>