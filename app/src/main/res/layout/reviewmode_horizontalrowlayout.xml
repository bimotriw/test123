<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="@dimen/oustlayout_dimen120"
    android:background="@color/fulltransparent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/oustlayout_dimen8"
        android:layout_marginLeft="@dimen/oustlayout_dimen8"
        android:layout_height="match_parent"
        android:id="@+id/card_mainrow"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="@dimen/oustlayout_dimen100"
                android:layout_height="@dimen/oustlayout_dimen100"
                android:gravity="center">
                <com.oustme.oustsdk.customviews.CustomRoundedImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/card_questionimage"
                    android:visibility="visible"
                    android:background="@drawable/oustroundedcorner_background"
                    android:layout_centerVertical="true" />
                <pl.droidsonroids.gif.GifImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/card_image_gif"
                    android:visibility="visible"
                    android:padding="@dimen/oustlayout_dimen1"
                    android:background="@drawable/oustroundedcorner_background"
                    android:scaleType="centerCrop"
                    android:layout_centerVertical="true" />
                <com.oustme.oustsdk.customviews.CustomRoundedImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/card_image"
                    android:visibility="visible"
                    android:padding="@dimen/oustlayout_dimen1"
                    android:background="@drawable/oustroundedcorner_background"
                    android:scaleType="centerCrop"
                    android:layout_centerVertical="true"></com.oustme.oustsdk.customviews.CustomRoundedImageView>
                <ImageView
                    android:layout_width="@dimen/oustlayout_dimen23"
                    android:layout_height="@dimen/oustlayout_dimen23"
                    android:id="@+id/card_videoicon"
                    android:layout_centerInParent="true"
                    android:visibility="gone"
                    android:tint="@color/Gray"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/Gray"
                android:id="@+id/card_text"
                android:maxLines="2"
                android:padding="@dimen/oustlayout_dimen2"
                android:textSize="@dimen/ousttext_dimen11"
                android:text=""/>
            <com.oustme.katexview.KatexView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/Gray"
                android:id="@+id/card_text_maths"
                android:maxLines="2"
                android:padding="@dimen/oustlayout_dimen2"
                android:textSize="@dimen/ousttext_dimen11"
                android:text=""
                android:visibility="gone"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>