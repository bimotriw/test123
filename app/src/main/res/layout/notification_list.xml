<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/notification_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/oustlayout_dimen10"
    app:cardCornerRadius="@dimen/oustlayout_dimen10"
    app:cardElevation="@dimen/oustlayout_dimen4"
    app:cardMaxElevation="@dimen/oustlayout_dimen4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/oustlayout_dimen15">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/notification_heading"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:gravity="center|start"
                android:singleLine="false"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/font_16sp"
                android:textStyle="normal" />

            <ImageView
                android:layout_width="@dimen/oustlayout_dimen30"
                android:layout_height="@dimen/oustlayout_dimen30"
                android:background="@drawable/ic_arrowforward"
                android:contentDescription="@string/inspect" />

        </LinearLayout>

        <TextView
            android:id="@+id/notification_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:padding="@dimen/oustlayout_dimen3"
            android:singleLine="false"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/font_14sp"
            android:textStyle="normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/notification_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:gravity="center|end"
                android:padding="@dimen/oustlayout_dimen3"
                android:singleLine="false"
                android:text="@string/date"
                android:textColor="@color/unselected_text"
                android:textSize="@dimen/font_12sp"
                android:textStyle="normal" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>