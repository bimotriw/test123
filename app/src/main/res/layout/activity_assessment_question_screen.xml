<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/assessment_deta"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".assessment_ui.assessmentQuestion.AssessmentQuestionScreen">

    <include
        android:id="@+id/toolbar_lay"
        layout="@layout/common_toolbar" />


    <include
        android:id="@+id/timer_layout"
        layout="@layout/common_time_bar"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/toolbar_lay"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:visibility="invisible" />


    <FrameLayout
        android:id="@+id/question_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_bar"
        android:layout_below="@+id/timer_layout" />


    <include
        android:id="@+id/bottom_bar"
        layout="@layout/common_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
