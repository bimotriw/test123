            android:layout_marginTop="@dimen/oustlayout_dimen14"
            android:layout_marginBottom="@dimen/oustlayout_dimen7"
            android:layout_marginLeft="@dimen/oustlayout_dimen7"
            android:layout_marginRight="@dimen/oustlayout_dimen7"
            android:background="@drawable/roundcorner_red"
            android:paddingLeft="@dimen/oustlayout_dimen35"
            android:paddingTop="@dimen/oustlayout_dimen5"
            android:paddingRight="@dimen/oustlayout_dimen35"
            android:paddingBottom="@dimen/oustlayout_dimen5"
