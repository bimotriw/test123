<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:id="@+id/mainavatar_layout"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/oustlayout_dimen45">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/oustlayout_dimen5"
                android:layout_height="@dimen/oustlayout_dimen150">
                <com.oustme.oustsdk.customviews.CircleImageView
                    android:layout_width="@dimen/oustlayout_dimen150"
                    android:layout_height="@dimen/oustlayout_dimen150"
                    android:id="@+id/imgAvatarButton"
                    android:layout_gravity="center"
                    android:background="@drawable/friendprofileavatardrawable"
                    android:contentDescription="@string/app_name" />

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/oustlayout_dimen60">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/oustlayout_dimen5">
                    <com.oustme.oustsdk.customviews.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/username_Txt"
                        android:gravity="top|center_horizontal"
                        android:textColor="@color/Black"
                        android:textSize="@dimen/ousttext_dimen18"
                        android:text=""
                        android:paddingBottom="@dimen/oustlayout_dimen4"
                        android:paddingTop="@dimen/oustlayout_dimen4" />

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_below="@+id/mainavatar_layout"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/oustlayout_dimen50"
                android:background="@color/LiteGray"
                android:id="@+id/headingLayout">
                <com.oustme.oustsdk.customviews.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/oustlayout_dimen20"
                    android:id="@+id/txtTitle"
                    android:gravity="center_vertical"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/ousttext_dimen15"
                    android:paddingLeft="@dimen/oustlayout_dimen3" />
            </LinearLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/oustlayout_dimen20"
                android:layout_marginTop="@dimen/oustlayout_dimen5"
                android:layout_marginRight="@dimen/oustlayout_dimen20"
                android:scrollbars="none">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/settingsLayout"
                    android:layout_marginBottom="@dimen/oustlayout_dimen20">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:id="@+id/sound_switchlayout">
                        <androidx.appcompat.widget.SwitchCompat
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/oustlayout_dimen50"
                            android:id="@+id/sound_switch"
                            android:background="@android:color/transparent"
                            android:layout_alignParentTop="true"
                            android:textSize="@dimen/ousttext_dimen14"
                            android:textColor="@color/Gray"
                            android:checked="false"
                            android:gravity="center_vertical|left"
                            android:paddingLeft="@dimen/oustlayout_dimen5"
                            android:paddingRight="@dimen/oustlayout_dimen5"
                            android:thumb="@drawable/setting_switch"
                            android:theme="@style/SwitchTheme"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/LiteGray"
                            android:layout_below="@+id/sound_switch">
                        </RelativeLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tts_switchlayout">
                        <androidx.appcompat.widget.SwitchCompat
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/oustlayout_dimen50"
                            android:id="@+id/tts_switch"
                            android:layout_alignParentTop="true"
                            android:textSize="@dimen/ousttext_dimen14"
                            android:textColor="@color/Gray"
                            android:gravity="center_vertical|left"
                            android:background="@android:color/transparent"
                            android:paddingLeft="@dimen/oustlayout_dimen5"
                            android:paddingRight="@dimen/oustlayout_dimen5"
                            android:checked="false"
                            android:thumb="@drawable/setting_switch"
                            android:theme="@style/SwitchTheme"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/LiteGray"
                            android:layout_below="@+id/tts_switch">
                        </RelativeLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/daily_switchlayout">
                        <androidx.appcompat.widget.SwitchCompat
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/oustlayout_dimen50"
                            android:id="@+id/daily_switch"
                            android:layout_alignParentTop="true"
                            android:textSize="@dimen/ousttext_dimen14"
                            android:textColor="@color/Gray"
                            android:gravity="center_vertical|left"
                            android:background="@android:color/transparent"
                            android:paddingLeft="@dimen/oustlayout_dimen5"
                            android:paddingRight="@dimen/oustlayout_dimen5"
                            android:checked="false"
                            android:thumb="@drawable/setting_switch"
                            android:theme="@style/SwitchTheme"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/LiteGray">
                        </RelativeLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/all_switchlayout">
                        <androidx.appcompat.widget.SwitchCompat
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/oustlayout_dimen50"
                            android:id="@+id/all_switch"
                            android:layout_alignParentTop="true"
                            android:textSize="@dimen/ousttext_dimen14"
                            android:textColor="@color/Gray"
                            android:gravity="center_vertical|left"
                            android:background="@android:color/transparent"
                            android:paddingLeft="@dimen/oustlayout_dimen5"
                            android:paddingRight="@dimen/oustlayout_dimen5"
                            android:checked="false"
                            android:thumb="@drawable/setting_switch"
                            android:theme="@style/SwitchTheme"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/LiteGray"
                            android:layout_below="@+id/all_switch">
                        </RelativeLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/email_switch_layout">
                        <androidx.appcompat.widget.SwitchCompat
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/oustlayout_dimen50"
                            android:id="@+id/email_switch"
                            android:layout_alignParentTop="true"
                            android:textSize="@dimen/ousttext_dimen14"
                            android:textColor="@color/Gray"
                            android:gravity="center_vertical|left"
                            android:background="@android:color/transparent"
                            android:paddingLeft="@dimen/oustlayout_dimen5"
                            android:paddingRight="@dimen/oustlayout_dimen5"
                            android:checked="false"
                            android:thumb="@drawable/setting_switch"
                            android:theme="@style/SwitchTheme"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/LiteGray"
                            android:layout_below="@+id/email_switch">
                        </RelativeLayout>
                    </RelativeLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|top"
        android:baselineAligned="false">
        <LinearLayout
            android:layout_width="@dimen/oustlayout_dimen70"
            android:layout_height="wrap_content"
            android:id="@+id/backarrow_back">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="@color/DarkGray"
                android:id="@+id/backArrowImgBtn"
                android:src="@drawable/ic_arrow_back_green"
                android:layout_marginTop="@dimen/oustlayout_dimen10"
                android:layout_marginBottom="@dimen/oustlayout_dimen20"
                android:layout_marginLeft="@dimen/oustlayout_dimen10"
                android:background="@android:color/transparent"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
