<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/main_comment_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/commentGrey"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:padding="@dimen/oustlayout_dimen5">

        <com.oustme.oustsdk.customviews.CurveLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:curveviewwidth="@dimen/oustlayout_dimen5">

            <ImageView
                android:layout_width="@dimen/oustlayout_dimen50"
                android:layout_height="@dimen/oustlayout_dimen50"
                android:id="@+id/user_avatar"/>
        </com.oustme.oustsdk.customviews.CurveLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/oustlayout_dimen10">
            <com.oustme.oustsdk.customviews.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/ousttext_dimen13"
                android:id="@+id/comment"
                android:text=""
                android:textColor="@color/DarkGray"
                />
            <com.oustme.oustsdk.customviews.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/ousttext_dimen11"
                android:id="@+id/commentdate"
                android:layout_marginTop="@dimen/oustlayout_dimen5"
                android:text=""
                android:textColor="@color/DarkGray_a"
                android:layout_below="@+id/comment"
                />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/main_comment_ll"
        android:background="@color/whitea"></View>
</RelativeLayout>