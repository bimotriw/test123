<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/overlay_container"
    tools:context=".course_ui.fragment.LearningCardDownloadFragment">


    <ImageView
        android:id="@+id/background_imageview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/download_progress_layout"
        android:layout_gravity="center"
        android:orientation="vertical">

       <ImageView
           android:layout_width="@dimen/oustlayout_dimen100"
           android:layout_height="@dimen/oustlayout_dimen100"
           android:id="@+id/loading_icon"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0%"
            android:gravity="center"
            android:layout_margin="10dp"
            android:id="@+id/download_progress_text"
            android:textColor="@color/white"
            style="@style/header_3"/>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:id="@+id/no_connection_text"
        style="@style/subtitle_1"
        android:textColor="@color/white"
        android:visibility="gone"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:layout_margin="10dp"
        android:id="@+id/download_content_text"
        android:textColor="@color/white"
        style="@style/header_3"/>

</FrameLayout>