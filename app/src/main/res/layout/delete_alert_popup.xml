<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/imageViewClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tint="@color/common_grey"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/oustlayout_dimen8"
        android:layout_marginEnd="@dimen/oustlayout_dimen12"
        android:layout_marginRight="@dimen/oustlayout_dimen12"
        android:src="@drawable/ic_close_img"/>
    <ImageView
        android:id="@+id/imageViewUploadIcon"
        android:layout_width="match_parent"
        android:layout_height="@dimen/oustlayout_dimen80"
        android:layout_marginTop="@dimen/oustlayout_dimen8"
        android:src="@drawable/ic_delete_pop_ill"/>
    <com.oustme.oustsdk.customviews.CustomTextView
        android:id="@+id/confirmTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/ousttext_dimen14"
        android:layout_marginTop="@dimen/oustlayout_dimen8"
        android:layout_marginStart="@dimen/oustlayout_dimen8"
        android:layout_marginLeft="@dimen/oustlayout_dimen8"
        android:layout_marginEnd="@dimen/oustlayout_dimen8"
        android:layout_marginRight="@dimen/oustlayout_dimen8"
        android:textColor="@color/light_grey_new"
        android:text="@string/module_delete_confirmation"
        />
    <Button
        android:id="@+id/deleteConfirmButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delete"
        android:textAllCaps="false"
        android:layout_marginBottom="@dimen/oustlayout_dimen15"
        android:layout_marginTop="@dimen/oustlayout_dimen15"
        android:minHeight="@dimen/oustlayout_dimen35"
        android:textColor="@color/whitea"
        android:background="@drawable/rounded_orangeback_small"/>
</LinearLayout>
