<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the background properties like color etc -->
    <item android:id="@+id/customPlayerProgressBg">
        <shape>
            <corners android:radius="@dimen/result_progressBar_radius" />
            <gradient
                android:startColor="@color/LiteGray"
                android:centerColor="@color/LiteGray"
                android:centerY="1.0"
                android:endColor="@color/LiteGray"
                android:angle="270"/>
        </shape>
    </item>

    <!-- Define the progress properties like start color, end color etc -->
    <item android:id="@+id/customPlayerProgress">
        <clip>
            <shape>
                <corners android:radius="@dimen/result_progressBar_radius" />
                <gradient
                    android:startColor="@color/LiteGreen"
                    android:centerColor="@color/LiteGreen"
                    android:centerY="1.0"
                    android:endColor="@color/LiteGray"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>
</layer-list>